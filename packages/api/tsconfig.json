{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES6", "ES2016", "ES2019", "ES2020", "ESNext"],    
    "outDir": "./dist",
    "rootDir": "./src",    
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"]
    },   
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.js", "dist", "node_modules"],
  "include": ["src/**/*", "src/utils/LoggerUtils.ts"]
}
