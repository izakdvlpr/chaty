{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./src/base/app"],
      "@command": ["./src/base/command"],
      "@event": ["./src/base/event"],      
      "@interfaces": ["./src/interfaces"],
      "@structures": ["./src/structures"],
      "@types": ["./src/types"],
      "@utils": ["./src/utils"]
    }
  },
  "include": ["src/**/*"]
}